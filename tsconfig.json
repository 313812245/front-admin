{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    },
    "noImplicitAny": false,
    "strict": true
  },
  "exclude": ["node_modules", "dist", "./tsconfig.config.json"],
  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
